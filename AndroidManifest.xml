    <application
        android:name=".ProjectApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.bitman.project.ui.WelcomeActivity"
            android:label="@string/app_name"
			android:launchMode="singleInstance"
				>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.bitman.project.ui.SettingsActivity"
                  android:label="settings">
         </activity>
        <activity android:name="org.bitman.project.ui.RecordActivity"
                  android:label="record"
				>
        </activity>
        <activity android:name="org.bitman.project.ui.PlayActivity"
                  android:label="play">
        </activity>
        <activity android:name="org.bitman.project.ui.Play_VLC_Activity"
                  android:label="vlc">
        </activity>

	    <service android:name = "org.bitman.project.record.rtsp.RtspServer" />
    </application>


</manifest>
