<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:focusable="false"
		>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:id="@+id/linearLayout">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/welcome_page1_addressHint"
				/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/welcome_page1_addressEdit" android:layout_weight="1"
				android:singleLine="true"
				android:imeOptions="actionSearch"
				android:focusableInTouchMode="true"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/welcome_page1_search_button_text"
				android:id="@+id/welcome_page1_search"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/welcome_page1_chooseCity_layout" android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:id="@+id/welcome_page1_time_layout">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/welcome_page1_timeHint"
				/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/welcome_page1_timeEdit" android:layout_weight="1"
				android:inputType="number"
				android:singleLine="true"
				android:imeOptions="actionGo"
				android:focusableInTouchMode="true"
				android:text="0"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@+id/linearLayout"
			android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
			android:id="@+id/welcome_page1_chooseCity_layout">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/welcome_chooseCity_text"
				android:layout_gravity="center"
				/>
		<Spinner
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/welcome_page1_chooseCity_spinner"
				android:layout_weight="1"
				/>
	</LinearLayout>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/welcome_page_start"
			android:textSize="30sp"
			android:id="@+id/welcome_page1_start"
			android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>