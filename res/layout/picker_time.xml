<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical" >

	<DatePicker
			android:id="@+id/welcome_page2_chooseDate"
			android:calendarViewShown="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	<TimePicker
			android:id="@+id/welcome_page2_chooseTime"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_horizontal">
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/welcome_page2_chooseTimeOK_button"
				android:id="@+id/welcome_page2_chooseTimeOk"/>
		<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:text="@string/welcome_page2_chooseTimeCancel_button"
				android:id="@+id/welcome_page2_chooseTimeCancel"/>

	</LinearLayout>


</LinearLayout>